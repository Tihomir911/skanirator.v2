#:import FadeTransition kivy.uix.screenmanager.FadeTransition
#:import Window kivy.core.window.Window

<MainScreen>:
    orientation: 'vertical'
    spacing: 20
    padding: 20
    canvas.before:
        Color:
            rgba: 0, 0, 0, 1  # –ß—ë—Ä–Ω—ã–π —Ñ–æ–Ω
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: None
        height: '80dp'
        spacing: 10

        Image:
            source: 'logo.png'
            size_hint_x: None
            width: '80dp'
            allow_stretch: True
            keep_ratio: True

        Label:
            text: 'Skanirator'
            font_size: '28sp'
            color: 1, 1, 1, 1
            bold: True
            valign: 'middle'

    BoxLayout:
        orientation: 'vertical'
        size_hint_y: None
        height: '2dp'
        canvas.before:
            Color:
                rgba: 1, 1, 1, 1  # –ë–µ–ª–∞—è –ø–æ–ª–æ—Å–∞
            Rectangle:
                pos: self.pos
                size: self.size

    BoxLayout:
        orientation: 'vertical'
        size_hint: (1, 0.5)
        spacing: 20
        padding: [20, 20, 20, 20]
        id: button_container

        Button:
            text: 'üì∑ –û—Ç—Å–∫–∞–Ω–∏—Ä—É–π QR'
            font_size: '20sp'
            size_hint_y: None
            height: '60dp'
            background_color: 1, 1, 1, 1
            color: 0, 0, 0, 1
            on_press: app.start_qr_mode()

        Button:
            text: 'üîó –í—Å—Ç–∞–≤—å —Å—Å—ã–ª–∫—É'
            font_size: '20sp'
            size_hint_y: None
            height: '60dp'
            background_color: 1, 1, 1, 1
            color: 0, 0, 0, 1
            on_press: app.start_link_mode()

    BoxLayout:
        orientation: 'vertical'
        id: content_area
        size_hint: (1, 1)
        spacing: 10

<CameraLayout>:
    orientation: 'vertical'
    spacing: 10

    BoxLayout:
        id: camera_area
        size_hint_y: 0.85

    Label:
        id: scan_result
        text: ''
        font_size: '16sp'
        size_hint_y: 0.15
        color: 0, 1, 0, 1
        markup: True

<LinkInputLayout>:
    orientation: 'vertical'
    spacing: 10
    padding: [10, 10, 10, 10]

    TextInput:
        id: link_input
        hint_text: '–í—Å—Ç–∞–≤—å—Ç–µ —Å—Å—ã–ª–∫—É'
        foreground_color: 1, 1, 1, 1
        background_color: 0.3, 0.3, 0.3, 1
        size_hint_y: None
        height: '50dp'
        multiline: False
        padding: [10, 10]
        font_size: '18sp'
        cursor_color: 1, 1, 1, 1
        canvas.before:
            Color:
                rgba: 1, 1, 1, 1  # –ë–µ–ª–∞—è —Ä–∞–º–∫–∞
            Line:
                width: 1.5
                rectangle: (self.x, self.y, self.width, self.height)

    Button:
        text: 'üöÄ –ü—Ä–æ–≤–µ—Ä–∏—Ç—å —Å—Å—ã–ª–∫—É'
        size_hint_y: None
        height: '50dp'
        font_size: '18sp'
        background_color: 1, 1, 1, 1
        color: 0, 0, 0, 1
        on_press: app.check_link(link_input.text)

    Label:
        id: link_result
        text: ''
        font_size: '16sp'
        color: 0, 1, 0, 1
        markup: True
