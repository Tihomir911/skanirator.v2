<MainLayout>:
    orientation: 'vertical'
    padding: 20
    spacing: 10
    canvas.before:
        Color:
            rgba: 0, 0, 0, 1
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: None
        height: 100
        spacing: 10
        Image:
            source: 'logo.png'
            size_hint_x: None
            width: 100
        Label:
            text: '[b]Skanirator[/b]'
            markup: True
            font_size: 32
            color: 1, 1, 1, 1

    Widget:
        size_hint_y: None
        height: 2
        canvas:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                size: self.size
                pos: self.pos

    BoxLayout:
        id: menu_box
        orientation: 'vertical'
        spacing: 20
        size_hint_y: None
        height: 200
        Button:
            text: 'üì∑ –û—Ç—Å–∫–∞–Ω–∏—Ä—É–π QR'
            font_size: 24
